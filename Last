<script>
function next(n){
  if(n==1){
    document.getElementById("beat").play();
  }

  let cur=document.getElementById("s"+n);
  let nxt=document.getElementById("s"+(n+1));

  cur.classList.add("hide");

  setTimeout(()=>{
    cur.style.display="none";
    nxt.style.display="block";
    nxt.classList.add("show");
  },1200);
}

function yes(){
  document.getElementById("beat").pause();

  for(let i=0;i<30;i++){
    let h=document.createElement("div");
    h.className="pop";
    h.innerHTML=Math.random()>0.5?"‚ù§Ô∏è":"üíã";
    h.style.left=Math.random()*100+"%";
    h.style.top=Math.random()*100+"%";
    document.body.appendChild(h);
    setTimeout(()=>h.remove(),1200);
  }

  next(2);
}

function playMusic(){
  document.getElementById("music").play();
}

/* ROSES */
const roses=["üåπ","ü•Ä","üå∫","üå∏","üå∑"];
for(let i=0;i<50;i++){
  let r=document.createElement("div");
  r.className="rose";
  r.innerHTML=roses[Math.floor(Math.random()*roses.length)];
  r.style.left=Math.random()*100+"%";
  r.style.fontSize=(14+Math.random()*14)+"px";
  r.style.animationDuration=(7+Math.random()*7)+"s";
  document.body.appendChild(r);
}

/* SPARKLES */
for(let i=0;i<30;i++){
  let s=document.createElement("div");
  s.className="sparkle";
  s.innerHTML="‚ú®";
  s.style.left=Math.random()*100+"%";
  s.style.top=Math.random()*100+"%";
  document.body.appendChild(s);
}
</script>

